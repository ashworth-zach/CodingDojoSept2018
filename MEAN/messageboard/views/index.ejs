<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Message Board</title>
</head>
<body>
    <h1>Welcome To Your Message Board</h1>
    <form action="/new_message" method="post">
    <input type="text" name="username" placeholder="Name">
    <br><br>
    <textarea name="message" placeholder="Type your message here" cols="30" rows="10"></textarea>
    <br><br>
    <input type="submit" value="Post Message">
    </form>
    
    <br>

    <% for(const message of messageKey) { %>
        <fieldset id="message">
        Name: <%= message.username %>
        <br><br>
        Message: <%= message.message %>
        <br><br>
        <% for (const comment of message._comments) { %>
            <fieldset id="comments">
                    <h5><%="Name: " + comment.username %></h5>
                    <h5><%="Comment: " + comment.comment %></h5>
                </fieldset>
                <br>
                <% } %>
        <h5>Leave a Comment Below:</h5>
        <form action="/new_comment/<%= message._id %>" method="post">
            <input type="text" name="username" placeholder="Name">
            <br><br>
            <textarea name="comment" placeholder="Type your comment here" cols="30" rows="2"></textarea>
            <br><br>
            <input type="submit" value="Post Comment">
        </form>
    </fieldset>
    
    <% } %>
</body>
</html>